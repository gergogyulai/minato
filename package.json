{
  "name": "project-minato",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @project-minato/db db:push",
    "db:studio": "turbo -F @project-minato/db db:studio",
    "db:generate": "turbo -F @project-minato/db db:generate",
    "db:migrate": "turbo -F @project-minato/db db:migrate",
    "db:start": "turbo -F @project-minato/db db:start",
    "db:watch": "turbo -F @project-minato/db db:watch",
    "db:stop": "turbo -F @project-minato/db db:stop",
    "db:down": "turbo -F @project-minato/db db:down",
    "elastic:start": "turbo -F @project-minato/elastic elastic:start",
    "elastic:watch": "turbo -F @project-minato/elastic elastic:watch",
    "elastic:stop": "turbo -F @project-minato/elastic elastic:stop",
    "elastic:down": "turbo -F @project-minato/elastic elastic:down",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@project-minato/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@project-minato/config": "workspace:*",
    "@types/bun": "catalog:",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.0"
}
